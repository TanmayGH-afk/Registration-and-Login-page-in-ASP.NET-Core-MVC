@model RegistrationForm.Models.UserRegistration

@{
    ViewData["Title"] = "Login";
    var successMessage = ViewData["SuccessMessage"] as string;
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-9">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Emaild" class="control-label"></label>
                <input asp-for="Emaild" class="form-control" />
                <span asp-validation-for="Emaild" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <b>@successMessage</b>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
